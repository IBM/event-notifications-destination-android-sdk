<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="357dp"
        android:layout_height="264dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/purple_700"
        android:indeterminateTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/unregister"
        android:layout_width="352dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:text="@string/unregister"
        app:layout_constraintEnd_toEndOf="@+id/register"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/register"
        app:layout_constraintTop_toBottomOf="@+id/register" />

    <Button
        android:id="@+id/subtags"
        android:layout_width="352dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:text="Subscribe to tags"
        app:layout_constraintEnd_toEndOf="@+id/unregister"
        app:layout_constraintStart_toStartOf="@+id/unregister"
        app:layout_constraintTop_toBottomOf="@+id/unregister" />

    <Button
        android:id="@+id/unsubtags"
        android:layout_width="352dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:text="UnSubscribe from tags"
        app:layout_constraintEnd_toEndOf="@+id/subtags"
        app:layout_constraintStart_toStartOf="@+id/subtags"
        app:layout_constraintTop_toBottomOf="@+id/subtags" />

    <Button
        android:id="@+id/register"
        android:layout_width="354dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/display"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


